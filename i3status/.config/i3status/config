# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "battery full"
order += "volume master"
order += "wireless _first_"
order += "ethernet _first_"
order += "load"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "󰤨 %quality"
        format_down = ""
}

ethernet _first_ {
        format_up = " %speed"
        format_down = ""
}

battery all {
        format = "%status %percentage"
}

battery full {
        format = "%status %percentage"
        format_down = ""
        format_percentage = "%.00f%s"
        status_chr = "󰂄"
        status_bat = "󰁹"
        status_unk = "? UNK"
        status_full = "󰁹"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

disk "/" {
        format = "%avail"
}

load {
        format = "%1min"
}

memory {
        format = "%used / %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

volume master {
        format = "󰕾 %volume"
        format_muted = "󰸈 (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
